<div class="review">

  <div class="review-rating" data-score="<%= review.rating %>"></div>
  <!-- <p><%= review.rating %></p> -->
  <p class="review-comment"><%= review.comment %></p>

  <% if user_signed_in? %>
    <% if review.user_id == current_user.id%>
      <div class="links btn-group">
        <%= link_to "编辑", edit_book_review_path(review.book,review),class:"btn btn-custom" %>
        <%= link_to "删除", book_review_path(review.book,review),method: :delete,
            data:{confirm:"你确定吗？"} ,class:"btn btn-custom" %>
      </div>
    <%end%>
  <%end%>

</div>
